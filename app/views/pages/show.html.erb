<div class="container">
<div class="p-5 rounded-lg m-3", style="background: rgba(255, 255, 255, 0.9)">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Employee Id</th>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Designation</th>
      <th scope="col">Division</th>
      <th scope="col">Projects</th>
      <th scope="colgroup">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
    <tr>
      <th scope="row"><%= employee.id %></th>
      <td><%= employee.name %></td>
      <td><%= employee.username %></td>
      <td><%= employee.email %></td>
      <td><%= employee.designation.name %></td>
      <td><%= employee.division.name %></td>
      <td><% unless employee.projects.empty? %>
            <% current_employee.projects.each do |project| %>
              <%= project.name %>
            <% end %>  
          <% else %>
            None
          <% end %>  
      </td>
      <td style="width:16%"><% if @employee=="HR Manager" %>
            <% unless employee.master_role.name=="HR Manager" %>
              <a href="<%= employee_registration_profile_edit_path(employee) %>" class="btn btn-outline-primary">Edit</a>
            <% end %>
          <% elsif @employee=="Project Manager" %>
            <% unless employee.master_role.name=="Project Manager" %>
              <a href="<%= project_assign_path(Project) %>" class="btn btn-outline-primary">Assign</a>
              <a href="<%= project_remove_path(Project) %>" class="btn btn-outline-primary">Remove</a>
            <% end %>
          <% end %>  
      </td>    
    </tr>
    <% end %>
  </tbody>
</table>
<center><p>
<a href="<%= employee_root_path %>" class="btn btn-outline-primary">Back to Dashboard</a> 
</p></center>
</div>
</div>
</div>